<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EBEBEB">


    <android.widget.Button
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/background_login"
        android:clickable="false"></android.widget.Button>

    <android.widget.TextView
        android:id="@+id/welcome"
        android:layout_width="247dp"
        android:layout_height="67dp"
        android:layout_above="@id/background"
        android:layout_alignBottom="@+id/background"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="206dp"
        android:elevation="100dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40dp"
        android:textStyle="bold"></android.widget.TextView>

    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="332dp"
        android:layout_height="395dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="31dp"
        android:elevation="100dp"
        android:gravity="top"></RelativeLayout>

    <android.widget.Button
        android:id="@+id/signin"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/container1"
        android:layout_alignBottom="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_rectangle"
        android:fontFamily="@font/montserrat_regular"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#585DDB"
        android:textStyle="bold"></android.widget.Button>

    <android.widget.Button
        android:id="@+id/register"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_rectangle"
        android:fontFamily="@font/montserrat_regular"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#585DDB"
        android:textStyle="bold"></android.widget.Button>

