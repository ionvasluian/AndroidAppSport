<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/leftside_username"

                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/first_name_signup"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="First Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/leftside_username"

                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/last_name_signup"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/leftside_username"

                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/username_signup"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Username"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/leftside_login"
                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/emailsignup"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Email"
                    android:maxLines="1"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/leftside_register"
                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/passwordsignup"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/leftside_trupka"
                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/callphoneNumber"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:singleLine="true"
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"

                    android:layout_marginBottom="15dp"
                    android:background="@drawable/leftside_birthday"
                    android:outlineProvider="none"></ImageView>
                <EditText
                    android:id="@+id/birthday_date"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rightside_login"
                    android:fontFamily="@font/montserrat_regular"
                    android:clickable="false"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:hint="Birthday"
                    android:maxLines="1"
                    android:outlineProvider="none"
                    android:textColor="#A8A8A8"
                    android:singleLine="true"
                    android:textSize="15dp"
                    />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/signupbutton"
            android:layout_width="273dp"
            android:layout_height="48dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/montserrat_regular"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"></Button>
    </LinearLayout>



</FrameLayout>