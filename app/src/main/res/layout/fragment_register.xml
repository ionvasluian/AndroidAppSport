<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="332dp"
    android:layout_height="395dp"
    tools:context=".RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="@drawable/register_background">
        </RelativeLayout>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="33dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="251dp"
            android:layout_toStartOf="@+id/emailsignup"
            android:background="@drawable/leftside_login"
            android:elevation="100dp"
            android:outlineProvider="none"></ImageView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_alignParentBottom="true"

            android:layout_marginTop="33dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="315dp"
            android:layout_toStartOf="@+id/username_signup"
            android:background="@drawable/leftside_username"
            android:elevation="100dp"
            android:outlineProvider="none"></ImageView>

        <EditText
            android:id="@+id/emailsignup"
            android:layout_width="225dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="250dp"
            android:background="@drawable/rightside_login"
            android:elevation="100dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Email"
            android:maxLines="1"
            android:outlineProvider="none"
            android:textColor="#A8A8A8"
            android:singleLine="true"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/username_signup"
            android:layout_width="225dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="315dp"
            android:background="@drawable/rightside_login"
            android:elevation="100dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Username"
            android:maxLines="1"
            android:singleLine="true"
            android:outlineProvider="none"
            android:textColor="#A8A8A8"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="33dp"

            android:layout_marginEnd="0dp"
            android:layout_marginBottom="185dp"
            android:layout_toStartOf="@+id/passwordsignup"
            android:background="@drawable/leftside_register"
            android:elevation="100dp"
            android:outlineProvider="none"></ImageView>

        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="225dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="185dp"
            android:background="@drawable/rightside_login"
            android:elevation="100dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:outlineProvider="none"
            android:textColor="#A8A8A8"
            android:singleLine="true"
            android:textSize="15dp" />

        <Button
            android:id="@+id/signupbutton"
            android:layout_width="273dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="115dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/montserrat_regular"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/googleSignUpButton"
            android:layout_width="273dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/google_register_button"
            android:fontFamily="@font/montserrat_regular"
            android:outlineProvider="none"
            android:text="          Sign up with google"
            android:textColor="#585DDB"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="15dp"
            android:background="#EBEBEB"
            android:elevation="100dp"
            android:src="@drawable/google_logo"></ImageView>

    </RelativeLayout>



</FrameLayout>